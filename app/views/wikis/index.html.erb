<div class="row">
  <h1><%= @wikis.count %> WIKIS</h1>
   <div class="col-md-12">
      <ul class="nav nav-pills">
        <div class="tab-content">
          <li role="presentation"><%= link_to "My Wikis", wikis_path, class: "active", action: "index" %></li>
          <li role="presentation"><%= link_to "All Wikis", wikis_path(select: :all), action: "index" %></li>
          <li role="presentation"><%= link_to "Collaborations", wikis_path(select: :colab), action: "index" %></li>
        </div>
      </ul>

     <table class="table">
     <tr>
       <td><b>Title</b></td>
       <td><b>Id</b></td>
       <td><b>Author</b></td>
       <td><b>Public</b></td>
       <td><b>Collaborate</b></td>
     </tr>
     <% @wikis.each do |wiki| %>
     <tr><td><%= link_to wiki.title, wiki_path(wiki) %></td>
         <td><%= wiki.id %></td>
         <td><%= wiki.owner.name %></td>
         <td><%= "yes" unless wiki.hide? %></td>
         <td><%= "yes" unless wiki.users.empty? %></td>
         </tr>
   
     <% end %>
     </table>
   </div>

   </div>
